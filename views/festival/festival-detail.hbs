<div id="detail-page">
      <div id="detail-page-img">
            <img src="{{currentFestival.festivalImg}}" alt="festival image"/>

      </div>
      <div id="detail-page-text">
            <h1>{{currentFestival.name}}</h1><br>
            <h3><i class="bi bi-geo-alt-fill"></i> Location: {{currentFestival.location}}</h3><br>
            <h3><i class="bi bi-cash-coin"></i> Ticket price: {{currentFestival.ticketPrice}}$</h3><br>
            <h4>{{currentFestival.info}}</h4><br>

            <div id="delete-edit-buttons">
                  <form action="/festival/{{currentFestival._id}}/delete" method="post">
                        <button type="submit" class="basic-btn">DELETE</button>
                  </form>
                  <a href="/festival/{{currentFestival._id}}/edit">
                        <button class="basic-btn">EDIT</button>
                  </a>
            </div>

      </div>
      
      

</div>


